"""
Page de gestion des bases de connaissances.
"""
import streamlit as st
import logging
from src.core.knowledge_bases_manager import KnowledgeBasesManager
from src.pages.components.llm.llm_selector import LLMSelector
from src.pages.components.kb.kb_operations import KBOperations
from src.pages.components.kb.kb_interface import KBInterface

class KnowledgeBasePage:
    """Page de gestion des bases de connaissances."""
    
    def __init__(self, kb_manager: KnowledgeBasesManager):
        """Initialise la page avec le gestionnaire de bases."""
        self.kb_manager = kb_manager
        self.logger = logging.getLogger(__name__)
        self.llm_selector = LLMSelector()
        self.kb_operations = KBOperations(kb_manager)
        self.kb_interface = KBInterface(kb_manager)
    
    def render(self):
        """Affiche la page de gestion des bases de connaissances."""
        # Sélection du modèle LLM
        st.markdown("### Configuration du modèle")
        self.llm_selector.render()
        
        # Interface des bases de connaissances
        st.markdown("### Bases de connaissances")
        self.kb_interface.render()
